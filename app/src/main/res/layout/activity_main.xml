<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:padding="10dp"
    tools:context="qvgdseries.estagiariopleno.com.qualvocegostadeseries.MainActivity">

    <ImageView
        android:id="@+id/logoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <SeekBar
        android:id="@+id/seekBarNotaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logoId"
        android:layout_alignLeft="@+id/logoId"
        android:layout_alignRight="@+id/logoId"
        android:layout_alignStart="@+id/logoId"
        android:layout_below="@+id/logoId"
        android:layout_marginTop="52dp"
        android:max="10"
        android:maxWidth="10dp" />

    <ImageView
        android:id="@+id/imgResultadoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />

    <TextView
        android:id="@+id/textoNotaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBarNotaId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seekBarNotaId"
        android:layout_alignStart="@+id/seekBarNotaId"
        android:layout_below="@+id/logoId"
        android:layout_marginTop="22dp"
        android:text="Pouco" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/logoId"
        android:layout_alignRight="@+id/logoId"
        android:text="Muito" />
</RelativeLayout>
